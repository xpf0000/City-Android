        <!--android:layout_height="wrap_content"-->
        <!--android:text="星期三"-->
        <!--android:layout_marginTop="@dimen/ui_10_dip"-->
        <!--android:layout_marginLeft="@dimen/ui_10_dip"-->
        <!--/>-->
</LinearLayout>
